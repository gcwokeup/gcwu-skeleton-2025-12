<div class="min-vh-100 d-flex flex-column">
  <!-- Hero Section -->
  <section class="bg-primary text-white py-5 flex-grow-1 d-flex align-items-center">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 text-center text-lg-start mb-4 mb-lg-0">
          <h1 class="display-4 fw-bold mb-3">Welcome to Your App</h1>
          <p class="lead mb-4">
            Build amazing things with Rails 8, Bootstrap 5, and modern tools.
            Get started in minutes with authentication, file uploads, and more.
          </p>
          
          <% if user_signed_in? %>
            <div class="d-grid gap-2 d-sm-flex">
              <a href="#" class="btn btn-light btn-lg px-4">Dashboard</a>
            </div>
          <% else %>
            <div class="d-grid gap-2 d-sm-flex">
              <%= link_to "Get Started", new_user_registration_path, class: "btn btn-light btn-lg px-4 me-sm-3" %>
              <%= link_to "Learn More", "#features", class: "btn btn-outline-light btn-lg px-4" %>
            </div>
          <% end %>
        </div>
        
        <div class="col-lg-6">
          <div class="text-center">
            <i class="bi bi-rocket-takeoff" style="font-size: 200px; opacity: 0.8;"></i>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-5 bg-light">
    <div class="container">
      <div class="row text-center mb-5">
        <div class="col">
          <h2 class="fw-bold">Features</h2>
          <p class="text-muted">Everything you need to build modern web applications</p>
        </div>
      </div>
      
      <div class="row g-4">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
              <h5 class="card-title mt-3">Secure Authentication</h5>
              <p class="card-text text-muted">
                Email/password and OAuth (Google) authentication with Devise.
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <i class="bi bi-lightning-charge text-primary" style="font-size: 3rem;"></i>
              <h5 class="card-title mt-3">Lightning Fast</h5>
              <p class="card-text text-muted">
                Built on Rails 8 with Hotwire for instant page updates.
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <i class="bi bi-phone text-primary" style="font-size: 3rem;"></i>
              <h5 class="card-title mt-3">Mobile First</h5>
              <p class="card-text text-muted">
                Responsive design that works beautifully on all devices.
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <i class="bi bi-cloud-upload text-primary" style="font-size: 3rem;"></i>
              <h5 class="card-title mt-3">File Uploads</h5>
              <p class="card-text text-muted">
                Active Storage with S3 support for file uploads.
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <i class="bi bi-stack text-primary" style="font-size: 3rem;"></i>
              <h5 class="card-title mt-3">Background Jobs</h5>
              <p class="card-text text-muted">
                Sidekiq with Redis for reliable background processing.
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <i class="bi bi-gear text-primary" style="font-size: 3rem;"></i>
              <h5 class="card-title mt-3">Production Ready</h5>
              <p class="card-text text-muted">
                Configured for deployment with Docker and Kamal.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <% unless user_signed_in? %>
    <section class="py-5 bg-white">
      <div class="container text-center">
        <h2 class="fw-bold mb-3">Ready to get started?</h2>
        <p class="lead text-muted mb-4">Join thousands of developers building with our platform.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-center">
          <%= link_to "Create Account", new_user_registration_path, class: "btn btn-primary btn-lg px-5" %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Footer -->
  <footer class="py-4 bg-dark text-white-50 mt-auto">
    <div class="container text-center">
      <p class="mb-0">&copy; <%= Date.current.year %> Your App. All rights reserved.</p>
    </div>
  </footer>
</div>

