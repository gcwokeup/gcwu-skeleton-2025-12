<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <!-- Header -->
      <div class="mb-4">
        <h2 class="mb-1">Account Settings</h2>
        <p class="text-muted">Manage your account security and preferences</p>
      </div>
      
      <!-- Change Email -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-envelope me-2"></i>
            Email Address
          </h5>
        </div>
        <div class="card-body p-4">
          <p class="text-muted mb-3">
            Your current email is <strong><%= current_user.email %></strong>
          </p>
          
          <%= form_with model: current_user, url: settings_path, method: :patch, local: true do |f| %>
            <% if @user&.errors&.any? %>
              <div class="alert alert-danger" role="alert">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :email, "New Email Address", class: "form-label" %>
              <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "newemail@example.com", value: current_user.email %>
            </div>
            
            <div class="mb-3">
              <%= f.label :current_password, "Current Password (to confirm)", class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control form-control-lg", placeholder: "••••••••", autocomplete: "current-password" %>
              <small class="form-text text-muted">We need your current password to confirm changes.</small>
            </div>
            
            <%= f.submit "Update Email", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      
      <!-- Change Password -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-shield-lock me-2"></i>
            Password
          </h5>
        </div>
        <div class="card-body p-4">
          <%= form_with model: current_user, url: settings_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :current_password, "Current Password", class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control form-control-lg", placeholder: "••••••••", autocomplete: "current-password" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :password, "New Password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "••••••••", autocomplete: "new-password" %>
              <small class="form-text text-muted">Minimum 6 characters</small>
            </div>
            
            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "••••••••", autocomplete: "new-password" %>
            </div>
            
            <%= f.submit "Update Password", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      
      <!-- Connected Accounts -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-link-45deg me-2"></i>
            Connected Accounts
          </h5>
        </div>
        <div class="card-body p-4">
          <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 p-3 bg-light rounded">
            <div class="d-flex align-items-center mb-2 mb-sm-0">
              <i class="bi bi-google text-danger me-3" style="font-size: 2rem;"></i>
              <div>
                <h6 class="mb-0">Google</h6>
                <small class="text-muted">
                  <% if current_user.provider == 'google_oauth2' %>
                    <i class="bi bi-check-circle-fill text-success me-1"></i>
                    Connected
                  <% else %>
                    Not connected
                  <% end %>
                </small>
              </div>
            </div>
            
            <% if current_user.provider == 'google_oauth2' %>
              <button class="btn btn-sm btn-outline-danger" disabled>
                <i class="bi bi-x-circle me-1"></i> Disconnect
              </button>
              <small class="text-muted d-block mt-2">
                You're using Google to sign in. Create a password first to disconnect.
              </small>
            <% else %>
              <%= button_to user_google_oauth2_omniauth_authorize_path, 
                  method: :post, 
                  class: "btn btn-sm btn-primary",
                  data: { turbo: false } do %>
                <i class="bi bi-link-45deg me-1"></i> Connect
              <% end %>
            <% end %>
          </div>
          
          <p class="text-muted small mb-0">
            <i class="bi bi-info-circle me-1"></i>
            Connecting your Google account allows you to sign in with one click.
          </p>
        </div>
      </div>
      
      <!-- Session Management -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-clock-history me-2"></i>
            Session Information
          </h5>
        </div>
        <div class="card-body p-4">
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <div class="p-3 bg-light rounded">
                <small class="text-muted d-block mb-1">Current Sign In</small>
                <strong>
                  <% if current_user.current_sign_in_at.present? %>
                    <%= time_ago_in_words(current_user.current_sign_in_at) %> ago
                  <% else %>
                    Never
                  <% end %>
                </strong>
              </div>
            </div>
            
            <div class="col-12 col-md-6">
              <div class="p-3 bg-light rounded">
                <small class="text-muted d-block mb-1">Current IP Address</small>
                <strong>
                  <%= current_user.current_sign_in_ip || 'N/A' %>
                </strong>
              </div>
            </div>
            
            <div class="col-12 col-md-6">
              <div class="p-3 bg-light rounded">
                <small class="text-muted d-block mb-1">Last Sign In</small>
                <strong>
                  <% if current_user.last_sign_in_at.present? %>
                    <%= time_ago_in_words(current_user.last_sign_in_at) %> ago
                  <% else %>
                    Never
                  <% end %>
                </strong>
              </div>
            </div>
            
            <div class="col-12 col-md-6">
              <div class="p-3 bg-light rounded">
                <small class="text-muted d-block mb-1">Total Sign Ins</small>
                <strong><%= current_user.sign_in_count || 0 %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Account Status -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-person-badge me-2"></i>
            Account Status
          </h5>
        </div>
        <div class="card-body p-4">
          <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3">
            <div>
              <h6 class="mb-1">Account Status</h6>
              <p class="text-muted mb-0">
                <% if current_user.locked_at.present? %>
                  <span class="badge bg-danger">Locked</span>
                  Your account is currently locked.
                <% else %>
                  <span class="badge bg-success">Active</span>
                  Your account is active and in good standing.
                <% end %>
              </p>
            </div>
          </div>
          
          <div class="mb-0">
            <small class="text-muted">
              <i class="bi bi-calendar me-1"></i>
              Member since <%= current_user.created_at.strftime('%B %d, %Y') %>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

